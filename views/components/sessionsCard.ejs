<li class="col-span-1 flex rounded-lg shadow-md bg-blue-50">
  <div class="flex w-16 flex-shrink-0 items-center justify-center <%= session.isCancelled ? 'bg-red-500' : 'bg-blue-600' %> rounded-l-lg text-base font-bold text-white">
    <%= sport.name.substring(0, 2) %>
  </div>
  <div class="flex flex-1 items-center justify-between rounded-r-lg border border-gray-200 bg-white p-3">
    <div class="flex-1">
      <a href="/sessions/<%= session.id %>" class="font-semibold <%= session.isCancelled ? 'line-through text-gray-400' : 'text-gray-900' %> hover:text-blue-700 text-lg">
        <%= session.time.toLocaleString('en-US', { dateStyle: 'medium', timeStyle: 'short' }) %>
      </a>
      <% if (session.isCancelled) { %>
        <p class="mt-1 text-sm text-red-500 font-medium">Session Cancelled</p>
      <% } else { %>
        <% 
        const currentDate = new Date().toISOString().split('T')[0];
        const sessionDate = session.time.toISOString().split('T')[0];
        if (sessionDate < currentDate) { %>
          <p class="mt-1 text-sm text-gray-500 font-medium">Session Completed</p>
        <% } else { %>
          <p class="mt-1 text-sm text-blue-600 font-medium"><%= session.numberOfPlayers %> Slots Left</p>
        <% } %>
      <% } %>
    </div>
    <div class="flex-shrink-0">
      <a href="/sessions/<%= session.id %>" class="inline-flex h-9 w-9 items-center justify-center rounded-full bg-blue-500 text-white hover:bg-blue-700 focus:ring-2 focus:ring-blue-400 focus:ring-offset-2 transition-all duration-300">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M17.25 8.25L21 12m0 0l-3.75 3.75M21 12H3" />
        </svg>
      </a>
    </div>
  </div>
</li>
