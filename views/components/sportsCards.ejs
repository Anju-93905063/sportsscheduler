<% if (sports.length == 0) { %>
  <div class="flex flex-col items-center justify-center p-6 bg-gradient-to-r from-blue-400 to-purple-500 text-white rounded-lg shadow-lg">
    <svg class="h-16 w-16 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 13h6m-3-3v6m-9 1V7a2 2 0 012-2h6l2 2h6a2 2 0 012 2v8a2 2 0 01-2 2H5a2 2 0 01-2-2z" />
    </svg>
    <h3 class="mt-4 text-2xl font-bold">No Sports Created!</h3>
    <p class="mt-2 text-lg"><%= user.role == "admin" ? "Start by adding a new sport." : "Contact your admin to create new sports." %></p>
    <% if (user.role == "admin") { %>
      <a href="/sports/create" class="mt-4 px-5 py-2 bg-white text-blue-600 font-semibold rounded-lg shadow-md hover:bg-gray-100">
        + New Sport
      </a>
    <% } %>
  </div>
<% } else { %>
  <div>
    <h2 class="text-3xl font-bold text-blue-800 mb-4">Recent Sports</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% for (var i = 0; i < sports.length; i++) { %>
        <div class="p-4 bg-white shadow-lg rounded-lg hover:shadow-2xl transition-all">
          <div class="text-xl font-semibold text-blue-700 flex justify-between">
            <span><%= sports[i].name %></span>
            <span class="text-sm bg-blue-100 text-blue-600 px-2 py-1 rounded-lg">
              <%= sessions.filter((session) => session.sport_id === sports[i].id).length %> Sessions
            </span>
          </div>
          <div class="mt-3 flex justify-between">
            <a href="/sports/<%= sports[i].id %>" class="text-blue-600 hover:underline">View Sport</a>
            <a href="/sports/<%= sports[i].id %>" class="text-gray-500 hover:text-gray-700">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M17.25 8.25L21 12m0 0l-3.75 3.75M21 12H3" />
              </svg>
            </a>
          </div>
        </div>
      <% } %>
      <% if (user.role == "admin") { %>
        <div class="p-4 bg-gradient-to-r from-green-400 to-blue-500 text-white rounded-lg shadow-lg flex items-center justify-center hover:shadow-xl transition-all">
          <a href="/sports/create" class="text-lg font-semibold">+ Create New Sport</a>
        </div>
      <% } %>
    </div>
  </div>
<% } %>
